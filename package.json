{
	"name": "electron-angular-webpack",
	"version": "1.0.0",
	"description": "A simple kit for Electron, Angular 4 and Webpack 3 including a live reload system for Angular.",
	"repository": "https://github.com/lbassin/Electron_Angular",
	"main": "dist/electron.js",
	"scripts": {
		"dev": "webpack && cross-env NODE_ENV=dev webpack-dev-server --port=4200",
		"prod": "webpack && electron .",
		"packager:win": "cross-env NODE_ENV=prod webpack && electron-packager . --overwrite --platform=win32 --arch=ia32 --prune=true --out=win_packager --icon=assets/icons/win/icon.ico",
		"packager:mac": "cross-env NODE_ENV=prod webpack && electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=mac_packager --icon=assets/icons/mac/icon.icns",
		"packager:linux": "cross-env NODE_ENV=prod webpack && electron-packager . --overwrite --platform=linux --arch=x64 --prune=true --out=linux_packager --icon=assets/icons/linux/icon.png",
		"installer:win": "npm run packager:win && node installers/windows/createinstaller.js && del /s /q win_packager && rmdir /s /q win_packager",
		"installer:mac": "npm run packager:mac && mkdir mac_installer && electron-installer-dmg ./mac_packager/Electron_Angular-darwin-x64/Electron_Angular.app electron-angular --out=mac_installer --overwrite && rm -rf mac_packager",
		"installer:linux": "npm run packager:linux && electron-installer-debian --src ./linux_packager/electron-angular-linux-x64/ --arch amd64 --dest linux_installer --config ./installers/linux/debian.json"
	},
	"author": "BASSIN Laurent & MARQUET Maxime",
	"license": "MIT",
	"devDependencies": {
		"clean-webpack-plugin": "^0.1.17",
		"concurrently": "^3.5.0",
		"cross-env": "^5.1.1",
		"css-loader": "^0.28.7",
		"electron-installer-debian": "^0.6.0",
		"electron-installer-dmg": "^0.2.1",
		"electron-packager": "^9.1.0",
		"electron-squirrel-startup": "^1.0.0",
		"electron-winstaller": "^2.6.3",
		"extract-loader": "^1.0.1",
		"file-loader": "^1.1.5",
		"html-loader": "^0.5.1",
		"html-webpack-plugin": "^2.30.1",
		"img-loader": "^2.0.0",
		"node-sass": "^4.5.3",
		"raw-loader": "^0.5.1",
		"resolve-url-loader": "^2.2.0",
		"sass-loader": "^6.0.6",
		"ts-loader": "^3.1.0",
		"typescript": "^2.5.3",
		"uglifyjs-webpack-plugin": "^1.0.1",
		"url-loader": "^0.6.2",
		"webpack": "^3.8.1",
		"webpack-dev-server": "^2.9.3"
	},
	"dependencies": {
		"@angular/common": "^4.4.6",
		"@angular/compiler": "^4.4.6",
		"@angular/core": "^4.4.6",
		"@angular/forms": "^4.4.6",
		"@angular/http": "^4.4.6",
		"@angular/platform-browser": "^4.4.6",
		"@angular/platform-browser-dynamic": "^4.4.6",
		"@angular/router": "^4.4.6",
		"angular-in-memory-web-api": "^0.3.2",
		"core-js": "^2.5.1",
		"electron": "^1.7.9",
		"rxjs": "^5.5.2",
		"zone.js": "^0.8.18"
	}
}